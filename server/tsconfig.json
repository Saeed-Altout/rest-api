{
    "compilerOptions": {
        "target": "ES2020", 
        "module": "CommonJS", 
        "moduleResolution": "node",
        "baseUrl": "src", 
        "outDir": "dist", 
        "sourceMap": true,
        "noImplicitAny": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true, 
        "strict": true, 
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "global.d.ts"]
    },
    "include": ["src/**/*", "global.d.ts"]
}